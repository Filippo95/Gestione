<%= form_with(model: attrezzo, local: true) do |form| %>
  <% if attrezzo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(attrezzo.errors.count, "error") %> prohibited this attrezzo from being saved:</h2>

      <ul>
      <% attrezzo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome, id: :attrezzo_nome %>
