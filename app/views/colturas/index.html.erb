<p id="notice"><%= notice %></p>

<h1>Colturas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estensione ha</th>
      <th>Id cat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colturas.each do |coltura| %>
      <tr>
        <td><%= coltura.nome %></td>
        <td><%= coltura.estensione_ha %></td>
        <td><%= coltura.id_cat %></td>
        <td><%= link_to 'Show', coltura %></td>
        <td><%= link_to 'Edit', edit_coltura_path(coltura) %></td>
        <td><%= link_to 'Destroy', coltura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

