<script>
$(document).ready(function () {

    var categorie=$.ajax({
        url:"/cat_prodottos.json" ,
        async: false,
        dataType: 'json'
    }).responseJSON;


    for (var i = 0; i < categorie.length; i++)
    {
          $('#'+categorie[i].id).text(getCatFromID(categorie,categorie[i].id_prarent));
          console.log("ho settato il parente di "+categorie[i].nome+" ed Ã¨: "+getCatFromID(categorie,categorie[i].id_prarent))
    }


} );

function getCatFromID(categorie,id)
{

  for (var i = 0; i < categorie.length; i++)
  {
    if(id==categorie[i].id)
    {
      return categorie[i].nome;
    }

  }
}
</script>
