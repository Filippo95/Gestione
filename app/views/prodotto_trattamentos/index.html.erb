<p id="notice"><%= notice %></p>

<h1>Prodotto Trattamentos</h1>

<table id="table">
  <thead>
    <tr>
      <th>Id prodotto</th>
      <th>Id trattamento</th>
      <th>Dose ha</th>
      <th>Avvesit</th>
      <th></th><th></th><th></th>
    </tr>
  </thead>

  <tbody>
    <% @prodotto_trattamentos.each do |prodotto_trattamento| %>
      <tr>
        <td><%= prodotto_trattamento.id_prodotto %></td>
        <td><%= prodotto_trattamento.id_trattamento %></td>
        <td><%= prodotto_trattamento.dose_ha %></td>
        <td><%= prodotto_trattamento.avvesit %></td>
        <td><%= link_to 'Visualizza', prodotto_trattamento, class:"btn btn-primary" %></td>
        <td><%= link_to 'Modifica', edit_prodotto_trattamento_path(prodotto_trattamento), class:"btn btn-warning" %></td>
        <td><%= link_to 'Elimina', prodotto_trattamento, method: :delete, data: { confirm: 'Sei sicuro?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Prodotto Trattamento', new_prodotto_trattamento_path, class:"btn btn-success" %>
<script>
				$(document).ready(function () {
				    $('#table').DataTable();
				} );
</script>
